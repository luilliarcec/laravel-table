{
    "name": "luilliarcec/laravel-table",
    "description": "Dynamic component for tables in Laravel Blade.",
    "keywords": [
        "tables",
        "laravel",
        "blade",
        "components"
    ],
    "homepage": "https://github.com/luilliarcec/laravel-table",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Luis Andr√©s Arce C.",
            "email": "luilliarcec@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "akaunting/laravel-money": "^3.0",
        "laravel/framework": "^8.0|^9.0",
        "luilliarcec/laravel-components": "^0.0.2",
        "spatie/laravel-package-tools": "^1.11",
        "spatie/laravel-query-builder": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Luilliarcec\\LaravelTable\\": "src"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Luilliarcec\\LaravelTable\\LaravelTableServiceProvider"
            ],
            "aliases": {
                "Table": "Luilliarcec\\LaravelTable\\Facades\\Table"
            }
        }
    }
}
